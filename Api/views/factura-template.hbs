<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
   
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"> 

      <style>

        body {
          max-width: 590px !important;
          max-height: 840px !important;
          overflow-x: hidden;
        }

        .tamaño {
          width: 560px !important ;
          height: auto !important;
        }
      </style>
   
    <title>Factura</title>
  </head>
  <body>
 

  
        <h4 class="col-6">Factura N° XXXXX      Fecha:{{fecha}}</h4>
      


     
        <div class="card tamaño">
             <div class="card-header">
                 Cliente:
            </div>
              <div class="card-body">

            <div>
                <p> Nombre: {{ compra.usuario.nombre }}</p>
                <p> Email: {{ compra.usuario.email }}</p>
                <p>Telefono: {{compra.usuario.telefono}}</p>
            </div>

            <div >
              <p>Direccion de entrega:</p>
              <p>{{compra.direccion.direccion}} {{compra.direccion.numero}} {{compra.direccion.piso}} </p> 
              <p>{{compra.direccion.localidad}} {{compra.direccion.provincia}} {{compra.direccion.codigoPostal}}</p>
              <p> Entrega el día {{fechaEntrega}} {{hora}} </p>
            </div>



         </div>


      </div>

       <h5 class="mt-3">Detalle:</h5>
        <table class="table table-bordered table-dark tamaño mt-2">
          <thead >
            <th>Producto</th>
            <th>Descripcion</th>
            <th>Precio</th>
          </thead>

          <tbody>
            {{#each compra.productos}}
            <tr>
              <td>{{ nombre }}</td>
              <td>{{ descripcion }}</td>
              <td>{{ precio }}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
  
        <p class=" mt-1 ">Total: {{compra.total}}</p>

        
        
   
    
   
  </body>
</html>
